<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外圆环，金属效果 -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="50%"
                android:startColor="#AFAFAF"
                android:endColor="#5A5A5A"
                android:useLevel="false" />
        </shape>
    </item>
    <!-- 内圆，用于显示指示灯颜色 -->
    <item
        android:top="5dp"
        android:left="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#FF0000" /> <!-- 红色填充颜色 -->
        </shape>
    </item>
</layer-list>